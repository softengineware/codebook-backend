# ===========================================
# Construction Codebook AI Backend - Environment Variables
# ===========================================

# Application
APP_NAME="Construction Codebook AI Backend"
VERSION="0.1.0"
APP_ENV=development
PORT=8000
API_V1_PREFIX=/v1

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -------------------------------------------
# REQUIRED: Supabase (PostgreSQL Database)
# -------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key

# -------------------------------------------
# REQUIRED: LLM Service (OpenAI or Anthropic)
# -------------------------------------------
LLM_API_KEY=sk-your-openai-api-key
LLM_MODEL_NAME=gpt-4o
LLM_PROVIDER=openai

# -------------------------------------------
# OPTIONAL: Pinecone (Vector DB - not needed for MVP)
# -------------------------------------------
PINECONE_API_KEY=
PINECONE_INDEX_NAME=
PINECONE_ENVIRONMENT=us-east-1

# -------------------------------------------
# OPTIONAL: Embeddings (not needed for MVP)
# -------------------------------------------
EMBEDDING_MODEL_NAME=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# -------------------------------------------
# MVP Authentication
# Set MVP_API_KEY to use a static API key for development
# This bypasses database-backed auth (api_keys table not needed)
# -------------------------------------------
MVP_API_KEY=your-secret-mvp-api-key
MVP_CLIENT_ID=00000000-0000-0000-0000-000000000001

# -------------------------------------------
# Authentication (production - requires api_keys table)
# -------------------------------------------
API_KEY_SIGNING_SECRET=change-me-in-production
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_STANDARD=100
RATE_LIMIT_LLM=10

# -------------------------------------------
# File Upload
# -------------------------------------------
MAX_FILE_SIZE_MB=10
MAX_ROWS_PER_UPLOAD=10000

# -------------------------------------------
# Job Processing
# -------------------------------------------
JOB_POLL_INTERVAL_SECONDS=5
JOB_TIMEOUT_SECONDS=300
JOB_MAX_RETRIES=3

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
